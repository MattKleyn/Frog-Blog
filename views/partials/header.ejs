                        <li><a href="/user_profile/<%=user.user_id%>" role="button">Profile</a></li>
                        <% } else { %>
                        <li><a href="/login_form" role="button">Login/Register</a></li>
                        <% } %>
                    </ul>

                </div>
            </nav>
        </header>
